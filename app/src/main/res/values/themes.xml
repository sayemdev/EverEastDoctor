<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DoctorHealthMen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_bar_color</item>
        <item name="colorPrimaryVariant">@color/status_bar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_bar_color</item>
        <item name="colorSecondaryVariant">@color/status_bar_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorControlActivated">@color/app_bar_color</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/appBackground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HealthMen.NoActionBarTransparent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E15E5755</item>
        <item name="colorPrimaryVariant">#E15E5755</item>
        <item name="colorOnPrimary">#E15E5755</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E15E5755</item>
        <item name="colorSecondaryVariant">#E15E5755</item>
        <item name="colorOnSecondary">#E15E5755</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#E15E5755</item>
        <!-- Customize your theme here.-->
    </style>

    <style name="TooltipTextAppearance">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tabTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.DoctorHealthMen.Action" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_bar_color</item>
        <item name="colorPrimaryVariant">@color/status_bar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_bar_color</item>
        <item name="colorSecondaryVariant">@color/status_bar_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

        <!-- Customize your theme here. -->
    </style>


